<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ptm.team.mapper.T_ManagementMapper">

	<!-- PT등록된 회원 리스트 -->
	<select id="selectList" resultType="ptm.team.vo.PtVO" parameterType="ptm.team.vo.ListVO">
		SELECT p.p_no
			 , p.t_no
			 , p.m_qr
			 , p.p_state
			 , p.p_ok
			 , p.p_comment
			 , m.m_name
			 , m.m_realP
		  FROM pt p, members m
		 WHERE t_no = #{t_no}
		 <if test = "searchMember != null">
		   AND m.m_name like CONCAT ('%', #{searchMember},'%')
		 </if>
		   AND p.p_state not in ('C')
	</select>
	
	<!-- PT 리스트에서 회원 삭제처리 p_state update -->
	<update id="updateList" parameterType="ptm.team.vo.PtVO">
		UPDATE pt SET
			   p_state = 'C'
		 WHERE t_no = #{t_no}
		   AND m_qr = #{m_qr}
		   AND p_no = #{p_no}
	</update>
	
	<!-- PT받고있는 회원의 회차 -->
	<select id="selectExercise" resultType="ptm.team.vo.RoundVO" parameterType="ptm.team.vo.RoundVO">
		 SELECT r.r_no
			  , r.t_no
			  , r.m_qr
			  , r.p_no
			  , r.r_ct
			  , r.r_date
			  , m.m_name  
			  , m.m_phone 
			  , m.m_email 
			  , m.m_realP 
		  FROM round r, members m
		 WHERE 1=1
		   <!-- AND p_no = #{p_no}
		   AND m_qr = #{m_qr}
		   AND t_no = #{t_no} -->
	</select>
	
	<!-- PT받고있는 회원의 회차 추가 -->
	<insert id="insertRound" parameterType="ptm.team.vo.RoundVO">
	<![CDATA[
		INSERT INTO round
		(
			, t_no
			, m_qr
			, p_no
			, r_ct
			, r_date
		)VALUES
		(
			 #{t_no}
			,#{m_qr}
			,#{p_no}
			,#{r_ct}
			,now()
		)
	]]>
	<selectKey resultType="integer" keyProperty="r_no" order="AFTER">
		SELECT MAX(r_no) FROM round
	</selectKey>
	</insert>
	
	<!-- PT받고있는 회원의 회차 추가 후 가장 마지막 회차 불러올때 -->
	<select id="selectRound" parameterType="int" resultType="ptm.team.vo.RoundVO">
		SELECT  r.r_no
			  , r.t_no
			  , r.m_qr
			  , r.p_no
			  , r.r_ct
			  , r.r_date
			  , m.m_name  
			  , m.m_phone 
			  , m.m_email 
			  , m.m_realP 
		  FROM round r, members m
		 WHERE r.r_no = #{r_no}
	</select>
	
</mapper>